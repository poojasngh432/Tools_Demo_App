<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivityNew">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:background="@drawable/bg_blue_rounded"
                android:id="@+id/dialog_boxes_btn"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="@dimen/dp_10"
                android:text="Dialog Boxes"
                android:textColor="@color/white" />

            <Button
                android:background="@drawable/bg_blue_rounded"
                android:id="@+id/fragments_btn"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="@dimen/dp_10"
                android:text="Fragments"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:background="@drawable/bg_blue_rounded"
                android:id="@+id/views_btn"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="@dimen/dp_10"
                android:text="Views"
                android:textColor="@color/white" />

            <Button
                android:background="@drawable/bg_blue_rounded"
                android:id="@+id/grids_btn"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="@dimen/dp_10"
                android:text="Grids"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:background="@drawable/bg_blue_rounded"
                android:id="@+id/recycler_view_btn"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="@dimen/dp_10"
                android:text="Recycler View"
                android:textColor="@color/white" />

            <Button
                android:background="@drawable/bg_blue_rounded"
                android:id="@+id/bottomsheet_btn"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="@dimen/dp_10"
                android:text="Bottomsheet"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:background="@drawable/bg_blue_rounded"
                android:id="@+id/login_btn"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="@dimen/dp_10"
                android:text="Login"
                android:textColor="@color/white" />

            <Button
                android:background="@drawable/bg_blue_rounded"
                android:id="@+id/navigation_drawer_btn"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="@dimen/dp_10"
                android:text="Navigation Drawer"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:background="@drawable/bg_blue_rounded"
                android:id="@+id/bottom_nav_btn"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="@dimen/dp_10"
                android:text="Bottom Navigation"
                android:textColor="@color/white" />

            <Button
                android:background="@drawable/bg_blue_rounded"
                android:id="@+id/bottom_nav_btn2"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_15"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="@dimen/dp_10"
                android:text="Bottom Navigation 2"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:background="@drawable/bg_blue_rounded"
                android:id="@+id/draggable_items_btn"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="@dimen/dp_10"
                android:text="Draggable Items"
                android:textColor="@color/white" />

            <Button
                android:background="@drawable/bg_blue_rounded"
                android:id="@+id/images_btn"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="@dimen/dp_10"
                android:text="Images"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:background="@drawable/bg_blue_rounded"
                android:id="@+id/videos_btn"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="@dimen/dp_10"
                android:text="Videos"
                android:textColor="@color/white" />

            <Button
                android:background="@drawable/bg_blue_rounded"
                android:id="@+id/select_file_btn"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="@dimen/dp_10"
                android:text="Select a File"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:background="@drawable/bg_blue_rounded"
                android:id="@+id/menu_btn"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="@dimen/dp_10"
                android:text="Menu"
                android:textColor="@color/white" />

            <Button
                android:background="@drawable/bg_blue_rounded"
                android:id="@+id/error_messages_btn"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="@dimen/dp_10"
                android:text="Error Messages"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:background="@drawable/bg_blue_rounded"
                android:id="@+id/touch_events_btn"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="@dimen/dp_10"
                android:text="Touch Events"
                android:textColor="@color/white" />

            <Button
                android:background="@drawable/bg_blue_rounded"
                android:id="@+id/appbar_coordinator_btn"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="@dimen/dp_10"
                android:text="Coordinator Appbar Layout"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:background="@drawable/bg_blue_rounded"
                android:id="@+id/freeze_layout_on_top_btn"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="@dimen/dp_10"
                android:text="Freeze layout"
                android:textColor="@color/white" />

            <Button
                android:background="@drawable/bg_blue_rounded"
                android:id="@+id/scrolling_btn"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="@dimen/dp_10"
                android:text="Scrolling"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:background="@drawable/bg_blue_rounded"
                android:id="@+id/permissions_btn"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="@dimen/dp_10"
                android:text="Permissions"
                android:textColor="@color/white" />

            <Button
                android:background="@drawable/bg_blue_rounded"
                android:id="@+id/playing_with_intent_btn"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="@dimen/dp_10"
                android:text="Playing with Intent"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:background="@drawable/bg_blue_rounded"
                android:id="@+id/animations_btn"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="@dimen/dp_10"
                android:text="Animations"
                android:textColor="@color/white" />

            <Button
                android:background="@drawable/bg_blue_rounded"
                android:id="@+id/add_more_btn2"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_15"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="@dimen/dp_10"
                android:text="Add more.."
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:background="@drawable/bg_blue_rounded"
                android:id="@+id/add_more_btn3"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_15"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="@dimen/dp_10"
                android:text="Add more.."
                android:textColor="@color/white" />

            <Button
                android:background="@drawable/bg_blue_rounded"
                android:id="@+id/add_more_btn4"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_15"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="@dimen/dp_10"
                android:text="Add more.."
                android:textColor="@color/white" />


        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:background="@drawable/bg_blue_rounded"
                android:id="@+id/add_something4"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="@dimen/dp_10"
                android:text="Add more.."
                android:textColor="@color/white" />

            <Button
                android:background="@drawable/bg_blue_rounded"
                android:id="@+id/add_something5"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="@dimen/dp_10"
                android:text="Add more.."
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:background="@drawable/bg_blue_rounded"
                android:id="@+id/add_something6"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="@dimen/dp_10"
                android:text="Add more.."
                android:textColor="@color/white" />

            <Button
                android:background="@drawable/bg_blue_rounded"
                android:id="@+id/add_something7"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="@dimen/dp_10"
                android:text="Add more.."
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>