<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_boxes_btn"
            android:text="Dialog Boxes"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:padding="@dimen/dp_10"
            android:layout_margin="@dimen/dp_15"
            android:background="@drawable/rounded_cornered_blue_background_new"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/error_messages_btn"
            android:text="Error Messages"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:padding="@dimen/dp_10"
            android:layout_margin="@dimen/dp_15"
            android:background="@drawable/rounded_cornered_blue_background_new"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/views_btn"
            android:text="Views"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:padding="@dimen/dp_10"
            android:layout_margin="@dimen/dp_15"
            android:background="@drawable/rounded_cornered_blue_background_new"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/action_bar_btn"
            android:text="Action Bar"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:padding="@dimen/dp_10"
            android:layout_margin="@dimen/dp_15"
            android:background="@drawable/rounded_cornered_blue_background_new"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/media_btn"
            android:text="Media"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:padding="@dimen/dp_10"
            android:layout_margin="@dimen/dp_15"
            android:background="@drawable/rounded_cornered_blue_background_new"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/animations_btn"
            android:text="Animations"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:padding="@dimen/dp_10"
            android:layout_margin="@dimen/dp_15"
            android:background="@drawable/rounded_cornered_blue_background_new"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/data_lists_btn"
            android:text="Data Lists"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:padding="@dimen/dp_10"
            android:layout_margin="@dimen/dp_15"
            android:background="@drawable/rounded_cornered_blue_background_new"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_btn"
            android:text="Login"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:padding="@dimen/dp_10"
            android:layout_margin="@dimen/dp_15"
            android:background="@drawable/rounded_cornered_blue_background_new"/>
    </LinearLayout>

</LinearLayout>